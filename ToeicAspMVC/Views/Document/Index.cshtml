
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main>
    @{ var userInfomatiom = (ToeicAspMVC.Models.User)Session["User"]; }
    <!--archive header-->
    <div class="archive-header pt-50">
        <div class="container">
            <h2 class="font-weight-900">Danh sách tài liệu</h2>

            <div class="bt-1 border-color-1 mt-30 mb-50"></div>
        </div>
    </div>
    <div class="pb-50">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="loop-grid mb-30">
                        <div class="row">
                            @foreach (var item1 in ViewBag.List)
                            {
                                <article class="col-lg-4 col-md-6 mb-30 wow fadeInUp animated" data-wow-delay="0.2s">
                                    <div class="post-card-1 border-radius-10 hover-up">
                                        <div class="thumb-overlay img-hover-slide position-relative" style="background-image: url('/Content/assets/imgs/@item1.image')">
                                            <a class="img-link" href="/Document/Detail/@item1.idDocument"></a>
                                            <span class="top-right-icon bg-success"><i class="elegant-icon icon_camera_alt"></i></span>
                                        </div>
                                        <div class="post-content p-30">
                                            <div class="d-flex post-card-content">
                                                <h5 class="post-title mb-30 font-weight-900">
                                                    <a href="/Document/Detail/@item1.idDocument">@item1.name</a>
                                                </h5>
                                                <div class="entry-meta meta-1 float-left font-x-small text-uppercase">
                                                    <span class="post-on">@item1.created</span>
                                                    <span class="hit-count has-dot">@item1.User.fullName</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </article>
                            }
                        </div>
                    </div>

                    <div class="pagination-area mb-30 wow fadeInUp animated">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-start">
                                @if (ViewBag.tag > 1)
                                {
                                    int b = ViewBag.tag - 1;
                                    <li class="page-item"><a class="page-link" href="/Document/Index/@b"><i class="elegant-icon arrow_left"></i></a></li>
                                }
                                else
                                {
                                    <li></li>
                                }

                                @for (var i = 1; i <= ViewBag.pageSize; i++)
                                {
                                    if (ViewBag.tag == i)
                                    {
                                        <li class="page-item active"><a class="page-link" href="/Document/Index/@i">@i</a></li>
                                    }
                                    else
                                    {
                                        <li class="page-item "><a class="page-link" href="/Document/Index/@i">@i</a></li>
                                    }

                                }
                                @if (ViewBag.tag < ViewBag.pageSize)
                                {
                                    int a = ViewBag.tag + 1;
                                    <li class="page-item"><a class="page-link" href="/Document/Index/@a"><i class="elegant-icon arrow_right"></i></a></li>
                                }
                                else
                                {
                                    <li></li>
                                }

                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>