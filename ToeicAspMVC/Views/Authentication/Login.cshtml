
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="bg-grey pt-80 pb-50">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-md-10">
                <div class="login_wrap widget-taber-content p-30 bg-white border-radius-10">
                    <div class="padding_eight_all bg-white">
                        <div class="heading_s1 text-center">
                            <h3 class="mb-30 font-weight-900">Đăng nhập thành viên</h3>
                        </div>
                        <form action="/Authentication/Login" method="post">
                            <div class="form-group">
                                <input type="text" required="" class="form-control" name="email" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <input class="form-control" required="" type="password" name="password" placeholder="Mật khẩu">
                            </div>
                            <p style="color:red">@ViewBag.message</p>
                            <div class="form-group">
                                <button type="submit" class="button button-contactForm btn-block">Đăng nhập</button>
                            </div>
                        </form>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>